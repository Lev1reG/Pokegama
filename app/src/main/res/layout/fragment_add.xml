<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.add.AddFragment">

    <TextView
        android:id="@+id/title_addfacility"
        style="@style/title.style"
        android:text="@string/addfacility_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_addfacility">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/addfacility_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/poppins_regular"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:text="@string/addfacility_description"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/addfacility_title_facility"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/poppins_semibold"
                android:paddingStart="24dp"
                android:paddingTop="10dp"
                android:paddingEnd="24dp"
                android:text="@string/addfacility_title_facility"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:boxStrokeColor="@color/gray_700">

                <AutoCompleteTextView
                    android:id="@+id/addfacility_facilityAutoComplete"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/stroke_outer"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="@string/addfacility_facility_hint"
                    android:inputType="none"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/addfacility_title_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/poppins_semibold"
                android:paddingStart="24dp"
                android:paddingTop="10dp"
                android:paddingEnd="24dp"
                android:text="@string/addfacility_title_name"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:boxStrokeColor="@color/gray_700">

                <EditText
                    android:id="@+id/addfacility_nameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/stroke_outer"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="@string/addfacility_name_hint"
                    android:inputType="text"
                    android:paddingStart="24dp"
                    android:paddingTop="18dp"
                    android:paddingEnd="24dp"
                    android:paddingBottom="20dp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/addfacility_faculty_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/poppins_semibold"
                android:paddingStart="24dp"
                android:paddingTop="10dp"
                android:paddingEnd="24dp"
                android:text="@string/addfacility_title_faculty"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:boxStrokeColor="@color/gray_700">

                <AutoCompleteTextView
                    android:id="@+id/addfacility_facultyAutoComplete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/stroke_outer"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="@string/addfacility_faculty_hint"
                    android:inputType="none"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:scrollHorizontally="true"
                    android:singleLine="false"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/addfacility_title_facilityphoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/poppins_semibold"
                android:paddingStart="24dp"
                android:paddingTop="10dp"
                android:paddingEnd="24dp"
                android:text="@string/addfacility_title_facilityphoto"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                card_view:cardElevation="0dp">

                <TextView
                    android:id="@+id/addfacility_facilityphoto_text"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="start"
                    android:background="@drawable/stroke_outer"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="@string/addfacility_facilityphoto_hint"
                    android:maxLines="1"
                    android:paddingStart="24dp"
                    android:paddingTop="18dp"
                    android:paddingEnd="110dp"
                    android:paddingBottom="20dp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/addfacility_facilityphoto_button"
                    style="@style/button"
                    android:layout_gravity="end"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="6dp"
                    android:text="@string/addfacility_upload" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/addfacility_title_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/poppins_semibold"
                android:paddingStart="24dp"
                android:paddingTop="10dp"
                android:paddingEnd="24dp"
                android:text="@string/addfacility_title_location"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="300dp">

                <com.mapbox.maps.MapView
                    android:id="@+id/mapView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </FrameLayout>

            <TextView
                android:id="@+id/addfacility_title_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/poppins_semibold"
                android:paddingStart="24dp"
                android:paddingTop="10dp"
                android:paddingEnd="24dp"
                android:text="@string/addfacility_title_description"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:boxStrokeColor="@color/gray_700">

                <EditText
                    android:id="@+id/addfacility_descriptionTextView"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/stroke_outer"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="@string/addfacility_description_hint"
                    android:inputType="text"
                    android:paddingStart="24dp"
                    android:paddingTop="18dp"
                    android:paddingEnd="24dp"
                    android:paddingBottom="20dp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/addfacility_submit"
                style="@style/button"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:text="@string/addfacility_submit" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="250dp" />
        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/loadingLayout"
        layout="@layout/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>